{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "../out-tsc/app",
    "module": "esnext",
    "baseUrl": "",
    "types": []
  },
  "include": [
    "**/*.ts",

  ],
  "exclude": [
    "**/*.spec.ts",
    "./environments/*.ts",
    "polyfills-test.ts",
    "test.ts"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "preserveWhitespaces": true,
    "enableIvy": true, /* FIXME: set true */
  }
}
